load("@rules_proto//proto:defs.bzl", "proto_library")
load("@io_bazel_rules_go//proto:def.bzl", "go_proto_library")

package(default_visibility = ["//visibility:public"])

proto_library(
    name = "common_proto",
    srcs = ["common.proto"],
    deps = [
        "//api:core_proto",
        "//api:status_proto",
        "@com_google_protobuf//:timestamp_proto",
    ],
)

proto_library(
    name = "audit_proto",
    srcs = ["audit.proto"],
    deps = [
        ":common_proto",
        "//api:ccl_proto",
        "//api:engine_proto",
    ],
)

go_proto_library(
    name = "audit_go_proto",
    importpath = "github.com/secretflow/scql/pkg/proto-gen/audit",
    protos = [
        ":audit_proto",
        ":common_proto",
    ],
    deps = [
        "//api:scql_go_proto",
    ],
)
